<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ComplaintDetailActivity">

    <include
        android:id="@+id/complaintDetail_toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complaintDetail_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_complaintDetail_complainLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complaint"
                android:textColor="#262626"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_complaintDetail_complaintDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Dummy text is text that is used in the publishing industry or by web designers to occupy the space which will later be filled with 'real' content"
                android:textColor="#262626"
                app:layout_constraintTop_toBottomOf="@+id/textView_complaintDetail_complainLabel" />


            <TextView
                android:id="@+id/textView_complaintDetail_dateOfOffenceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date Of Offence"
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_complaintDetail" />

            <TextView
                android:id="@+id/textView_complaintDetail_dateOfOffence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456789012"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_dateOfOffenceLabel" />


            <TextView
                android:id="@+id/textView_complaintDetail_complainantUIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complainant Aadhaar Number"
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_dateOfOffence" />

            <TextView
                android:id="@+id/textView_complaintDetail_complainantUID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456789012"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_complainantUIDLabel" />

            <TextView
                android:id="@+id/textView_complaintDetail_complainantLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complainant Name"
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_complainantUID" />

            <TextView
                android:id="@+id/textView_complaintDetail_complainantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum Amat"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_complainantLabel" />

            <TextView
                android:id="@+id/textView_complaintDetail_addressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complainant Address"
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView_complaintDetail_complainantName" />

            <TextView
                android:id="@+id/textView_complaintDetail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum Amat"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_addressLabel" />

            <TextView
                android:id="@+id/textView_complaintDetail_contactNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complainant Contact Number"
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/textView_complaintDetail_address" />

            <TextView
                android:id="@+id/textView_complaintDetail_contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9702345634"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_contactNumberLabel" />

            <TextView
                android:id="@+id/textView_complaintDetail_districtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="District: "
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_complaintDetail_contactNumber" />

            <TextView
                android:id="@+id/textView_complaintDetail_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Mumbai"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_complaintDetail_districtLabel"
                app:layout_constraintStart_toEndOf="@+id/textView_complaintDetail_districtLabel"
                app:layout_constraintTop_toTopOf="@+id/textView_complaintDetail_districtLabel" />

            <TextView
                android:id="@+id/textView_complaintDetail_policeStationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Police Station: "
                android:textColor="#262626"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_complaintDetail_district" />

            <TextView
                android:id="@+id/textView_complaintDetail_policeStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Kurla"
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_complaintDetail_policeStationLabel"
                app:layout_constraintStart_toEndOf="@+id/textView_complaintDetail_policeStationLabel"
                app:layout_constraintTop_toTopOf="@+id/textView_complaintDetail_policeStationLabel" />

            <TextView
                android:id="@+id/textView_complaintDetail_statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Status: "
                android:textColor="#262626"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_complaintDetail_editStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView_complaintDetail_editStatus" />

            <TextView
                android:id="@+id/textView_complaintDetail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Pending "
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_complaintDetail_editStatus"
                app:layout_constraintStart_toEndOf="@+id/textView_complaintDetail_statusLabel"
                app:layout_constraintTop_toTopOf="@+id/imageView_complaintDetail_editStatus" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_complaintDetail_editStatus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_edit_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_policeStation" />

            <TextView
                android:id="@+id/textView_complaintDetail_complaintExecutorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Complaint Executor"
                android:textColor="#262626"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/textView_complaintDetail_status" />

            <TextView
                android:id="@+id/textView_complaintDetail_complaintExecutor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Not Selected "
                android:textColor="#262626"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_complaintDetail_editExecutor"
                app:layout_constraintEnd_toStartOf="@+id/imageView_complaintDetail_editExecutor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageView_complaintDetail_editExecutor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_complaintDetail_editExecutor"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/ic_edit_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_complaintDetail_complaintExecutorLabel" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>